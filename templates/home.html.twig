{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/vendors/flipclock.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/home.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/home_clock.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}

    <div id="block1" class="tile">
        <video width="100%" autoplay muted loop id="mainvideo" class="responsive-video">
            <source src="{{ asset('videos/cometebyGY.webm') }}" type="video/webm">
            <source src="{{ asset('videos/cometebyGY.mp4') }}" type="video/mp4">
        </video>
        <div id="block1content">
            <div id="clock">
                <p class="text">Prochaine formation le:</p>
                <p id="nextTrainingDate" class="date"></p>
                <p class="text">Soit dans</p>
                <p id="remainingHourDays" class="date"></p>
                <p class="text">Temps restant</p>
                <p id="remainingSecs" class="time"></p>
            </div>
        </div>

    </div>

    <div id="block2" class="tile parallax-container">
        <div class="clock2"></div>
    </div>

    <div id="block3" class="tile parallax-container">
        <div class="parallax"><img src="{{ asset('images/parallax1.jpg') }}"></div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/home.js') }}"></script>
    <script src="{{ asset('js/vendors/flipclock.min.js') }}"></script>
{% endblock %}
